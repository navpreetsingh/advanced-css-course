{
  "name": "Advanced-HTML-CSS-Course",
  "version": "1.0.0",
  "description": "Practicing advanced HTML/CSS course on Udemy",
  "scripts": {
     "natour:watch:sass": "sass --watch Natours/starter/sass:Natours/starter/css",
    "natour:live:server": "cd Natours/starter; live-server",
    "natour:start": "npm-run-all --parallel natour:live:server natour:watch:sass",

    "production commands": "Below are the production commands",
    "natour:compile:sass": "sass Natours/starter/sass:Natours/starter/css",
    "natour:concat:css": "concat -o Natours/starter/css/main.concat.css Natours/starter/css/*.css",
    "natour:prefix:css": "postcss --use autoprefixer -b 'last 5 versions' Natours/starter/css/main.concat.css -o Natours/starter/css/main.prefix.css",
    "natour:compress:css": "sass --style compressed Natours/starter/css/main.prefix.css:Natours/starter/css/main.min.css",
    "natour:build:css": "npm-run-all natour:compile:sass natour:concat:css natour:prefix:css natour:compress:css",

    "trillo:watch:sass": "sass --watch Trillo/starter/sass:Trillo/starter/css",
    "trillo:live:server": "cd Trillo/starter; live-server",
    "trillo:start": "npm-run-all --parallel trillo:live:server trillo:watch:sass",

    "nexter:watch:sass": "sass --watch Nexter/starter/sass:Nexter/starter/css",
    "nexter:live:server": "cd Nexter/starter; live-server",
    "nexter:live:server:firefox": "cd Nexter/starter; live-server --browser=firefox --host=192.168.0.19",
    "nexter:start": "npm-run-all --parallel nexter:live:server nexter:live:server:firefox nexter:watch:sass",

    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Navpreet Singh",
  "license": "ISC",
  "dependencies": {
    "sass": "^1.26.9"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0"
  }
}
